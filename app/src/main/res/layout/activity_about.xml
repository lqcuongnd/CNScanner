<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".UserActivities.InputActivity">

    <TextView
        android:id="@+id/lblSuaTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:background="#4166F5"
        android:gravity="center"
        android:text="Về chúng tôi"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <!--<pl.droidsonroids.gif.GifImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/loadingwc"
            />-->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gif"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:cropToPadding="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="-30dp"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="scanning.json"
            app:lottie_speed="2" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="269dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/blue_content_logo"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btnDongGop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="7dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/register_btn"
        android:text="Góp ý"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

</RelativeLayout>